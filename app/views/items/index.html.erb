<p id="notice"><%= notice %></p>

<h1>Todo List</h1>

<!-- View Table -->
<div ng-controller="ItemsCtrl">
<!-- Input -->
  <form class="form-inline">

    <strong>Add Item: </strong>
    <input type="text"  class="form-control" placeholder="I need to...">

    <strong>By: </strong>
    <input type="date" class="form-control" placeholder="">

    <strong>Criticality: </strong>
    <input type="number" class="form-control" min ="1" max="3" placeholder="3">
    
    <strong>Add to list </strong>
    <input type="submit" class"form-control" value="+" class="btn btn-success">
  </form>

  <!-- Display -->
  <table class="table table-hover">
    <thead>
      <td> What needs to be done? </td>
      <td> Done? </td>
    </thead>
    <tr ng-repeat="item in items">
      <td> 
        {{item.desc}}
      </td>
      <td>
        {{item.done}}
        <small ng-show="item.crit"><br>{{item.crit}}</small>
      </td>
  </tr>
  </table>
</div>







