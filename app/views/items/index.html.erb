<p id="notice"><%= notice %></p>

<h1>Todo List</h1>

<!-- View Table -->
<div ng-controller="ItemsCtrl">
<!-- Input -->
  <form class="form-inline" ng-submit="addItem()">

    <strong>Add Item: </strong>
    <input type="text"  class="form-control" placeholder="I need to..." ng-model="newItem.desc">

    <strong>Criticality: </strong>
    <input type="number" class="form-control" min ="1" max="3" placeholder="3" text="3" ng-model="newItem.crit">
    
    <strong>Add to list </strong>
    <input type="submit" class"form-control" value="+" class="btn btn-success">
  </form>

  <!-- Display -->
  <table class="table table-hover">
    <thead>
      <td>
        <strong> What needs to be done? </strong> 
      </td>
      <td>
        <strong> Criticality </strong> 
      </td>
      <td>
        <strong> Complete </strong> 
      </td>
    </thead>
    <tr ng-repeat="item in items | orderBy:'-crit':reverse">
      <td> 
        {{item.desc}}
      </td>
      <td>
        <p ng-show="item.crit"><br>{{item.crit}}</p>
      </td>
      <td>
        <button ng-click="deleteItem(item)" class="btn btn-success btn-sm"><span class="glyphicon glyphicon-check" aria-hidden="true"></span></button>
    </td>

  </tr>
  </table>
</div>







<<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Crit</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.crit %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
